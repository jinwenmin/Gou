<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:id="@+id/LotteryBBTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/top_background">

        <ImageView
            android:id="@+id/_back"
            android:layout_width="@dimen/top_height"
            android:layout_height="@dimen/top_height"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="存取款记录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/top_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px">

        <LinearLayout
            android:id="@+id/TeamCunquLinear1"
            android:layout_width="match_parent"
            android:layout_height="60px">

            <RelativeLayout
                android:id="@+id/TeamCunQurelateTime1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="4px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TeamCunQutimetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="6px"
                    android:text="2010-01-01"
                    android:textSize="25px" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignBottom="@+id/TeamCunQutimetext"
                    android:layout_toLeftOf="@+id/view"
                    android:layout_toStartOf="@+id/view"
                    android:background="@drawable/wuka_xiala" />

                <View
                    android:id="@+id/view"
                    android:layout_width="1px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/gray" />
            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/TeamCunQurelateTime2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="4px"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TeamCunQutimetext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="6px"
                    android:text="6666-66-66"
                    android:textSize="25px" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6px"
                    android:background="@drawable/wuka_xiala" />


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/TeamCunquLinear1"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_below="@id/TeamCunquLinear1">

            <RelativeLayout
                android:id="@+id/TeamCunQurelateBank4"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="4px"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TeamCunQutimetext4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6px"
                    android:text="全部"
                    android:textSize="25px" />

                <FrameLayout
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_margin="16px"
                        android:background="@drawable/wuka_xiala" />

                    <Spinner
                        android:id="@+id/TeamCunQuLotteryType4"
                        style="@android:style/Widget.Spinner"
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_marginLeft="4px"

                        android:background="@drawable/wuka_xiala"
                        android:visibility="invisible" />
                </FrameLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/TeamCunQurelateBank3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="4px"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TeamCunQutimetext3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6px"
                    android:text="全部"
                    android:textSize="25px" />

                <FrameLayout
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <Spinner
                        android:id="@+id/TeamCunQuLotteryType"
                        style="@android:style/Widget.Spinner"
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_marginLeft="-4px"
                        android:layout_marginRight="10px"
                        android:background="@drawable/wuka_xiala"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@drawable/wuka_xiala" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="按用户名查询(可选)"
            android:textSize="25px" />

        <View
            android:layout_width="1px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@color/gray" />

        <EditText
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="按订单号查询(可选)"
            android:textSize="25px" />

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="搜索"
            android:textSize="30px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"></View>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5px"
            android:text="自己"
            android:textSize="30px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <RadioButton
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5px"
            android:text="直接下级"
            android:textSize="30px" />

        <View
            android:layout_width="5px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <RadioButton
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5px"
            android:text="所有下级"
            android:textSize="30px" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"></View>
</LinearLayout>
