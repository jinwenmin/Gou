            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_margin="5px"
            android:background="@drawable/item_gameselect"
            android:button="@null"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/select_gamecolor"
            android:textSize="30px" />

        <CheckBox
            android:id="@+id/checkBoxOne_1"
