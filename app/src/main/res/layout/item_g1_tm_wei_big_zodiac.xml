<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:layout_margin="5px"
            android:layout_weight="4"
            android:background="@drawable/gamecenter_btn"
            android:gravity="center"
            android:padding="5px"
            android:text="特码生肖"
            android:textColor="@android:color/white"
            android:textSize="30px" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="14"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxOne_0"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_margin="5px"
                    android:background="@drawable/item_gameselect1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="鼠"
                    android:textColor="@color/select_gamecolor1"
                    android:textSize="30px" />

                <CheckBox
                    android:id="@+id/checkBoxOne_1"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_margin="5px"
                    android:background="@drawable/item_gameselect1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="牛"
                    android:textColor="@color/select_gamecolor1"
                    android:textSize="30px" />

                <CheckBox
                    android:id="@+id/checkBoxOne_2"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_margin="5px"
                    android:background="@drawable/item_gameselect1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="虎"
                    android:textColor="@color/select_gamecolor1"
                    android:textSize="30px" />

                <CheckBox
                    android:id="@+id/checkBoxOne_3"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_margin="5px"
                    android:background="@drawable/item_gameselect1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="兔"
                    android:textColor="@color/select_gamecolor1"
                    android:textSize="30px" />

                <CheckBox
                    android:id="@+id/checkBoxOne_4"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_margin="5px"
                    android:background="@drawable/item_gameselect1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="龙"
                    android:textColor="@color/select_gamecolor1"
                    android:textSize="30px" />

                <CheckBox
                    android:id="@+id/checkBoxOne_5"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_margin="5px"
                    android:background="@drawable/item_gameselect1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="蛇"
                    android:textColor="@color/select_gamecolor1"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxOne_6"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_margin="5px"
                    android:background="@drawable/item_gameselect1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="马"
                    android:textColor="@color/select_gamecolor1"
                    android:textSize="30px" />

                <CheckBox
                    android:id="@+id/checkBoxOne_7"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_margin="5px"
                    android:background="@drawable/item_gameselect1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="羊"
                    android:textColor="@color/select_gamecolor1"
                    android:textSize="30px" />

                <CheckBox
                    android:id="@+id/checkBoxOne_8"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_margin="5px"
                    android:background="@drawable/item_gameselect1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="猴"
                    android:textColor="@color/select_gamecolor1"
                    android:textSize="30px" />

                <CheckBox
                    android:id="@+id/checkBoxOne_9"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_margin="5px"
                    android:background="@drawable/item_gameselect1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="鸡"
                    android:textColor="@color/select_gamecolor1"
                    android:textSize="30px" />

                <CheckBox
                    android:id="@+id/checkBoxOne_10"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_margin="5px"
                    android:background="@drawable/item_gameselect1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="狗"
                    android:textColor="@color/select_gamecolor1"
                    android:textSize="30px" />

                <CheckBox
                    android:id="@+id/checkBoxOne_11"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_margin="5px"
                    android:background="@drawable/item_gameselect1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="猪"
                    android:textColor="@color/select_gamecolor1"
                    android:textSize="30px" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>