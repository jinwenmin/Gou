<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ZZjlTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/top_background">

        <ImageView
            android:id="@+id/_back"
            android:layout_width="@dimen/top_height"
            android:layout_height="@dimen/top_height"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="转账记录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/top_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/ZZjlrelateTime1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="6px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ZZjltimetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="6px"
                    android:text="2010-01-01" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6px"
                    android:background="@drawable/wuka_xiala" />

                <View
                    android:layout_width="1px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ZZjlrelateTime2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="6px"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ZZjltimetext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="6px"
                    android:text="2010-01-01" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6px"
                    android:background="@drawable/wuka_xiala" />

                <View
                    android:layout_width="1px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ZZjlrelateBank4"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="6px"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ZZjltimetext4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6px"
                    android:text="按日统计" />

                <FrameLayout
                    android:layout_width="56px"
                    android:layout_height="56px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <Spinner
                        android:id="@+id/ZZjlgameLotteryType4"
                        style="@android:style/Widget.Spinner"
                        android:layout_width="56px"
                        android:layout_height="56px"
                        android:layout_marginLeft="-4px"
                        android:layout_marginRight="10px"
                        android:background="@drawable/wuka_xiala"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="6px"
                        android:background="@drawable/wuka_xiala" />
                </FrameLayout>


            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout

                android:id="@+id/ZZjlrelateBank3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6px"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ZZjltimetext3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6px"
                    android:text="全部" />

                <FrameLayout
                    android:layout_width="56px"
                    android:layout_height="56px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <Spinner
                        android:id="@+id/ZZjlgameLotteryType"
                        style="@android:style/Widget.Spinner"
                        android:layout_width="56px"
                        android:layout_height="56px"
                        android:layout_marginLeft="-4px"
                        android:layout_marginRight="10px"
                        android:background="@drawable/wuka_xiala"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="6px"
                        android:background="@drawable/wuka_xiala" />
                </FrameLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ZZjlrelateBank5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6px"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ZZjltimetext5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6px"
                    android:text="全部    " />

                <FrameLayout
                    android:layout_width="56px"
                    android:layout_height="56px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <Spinner
                        android:id="@+id/ZZjlgameLotteryType2"
                        style="@android:style/Widget.Spinner"
                        android:layout_width="56px"
                        android:layout_height="56px"
                        android:layout_marginLeft="-4px"
                        android:layout_marginRight="10px"
                        android:background="@drawable/wuka_xiala"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="6px"
                        android:background="@drawable/wuka_xiala" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"></View>
</LinearLayout>
