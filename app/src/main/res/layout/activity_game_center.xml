<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/GameCenterTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/top_background">

        <ImageView
            android:id="@+id/_back"
            android:layout_width="@dimen/top_back"
            android:layout_height="@dimen/top_back"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/GameCentertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="游戏中心"
            android:textColor="@android:color/white"
            android:textSize="@dimen/top_textsize" />

        <TextView
            android:id="@+id/ToDescrioption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="玩法介绍"
            android:textColor="@android:color/white"
            android:textSize="40px" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/gameCenterButtom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50px">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/GameZhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="注"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/GameYuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0.0"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="元"
                    android:textSize="30px" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="3px"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/game_beishu_biankuang"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cut"
                        android:layout_width="50px"
                        android:layout_height="match_parent"
                        android:background="#3A5FCD"
                        android:gravity="center"
                        android:text="－"
                        android:textColor="@android:color/white"
                        android:textSize="30px" />

                    <EditText
                        android:id="@+id/edit1"
                        android:layout_width="80px"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="1"
                        android:textSize="20px" />

                    <TextView
                        android:id="@+id/add"
                        android:layout_width="50px"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#3A5FCD"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@android:color/white"
                        android:textSize="30px" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/LinearMoneyGetCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_marginLeft="5px"
                        android:layout_marginRight="5px"
                        android:background="@drawable/item_gamemoney_type_select"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="元"
                        android:textColor="@color/select_gamecolor1"
                        android:textSize="30px" />

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_marginLeft="5px"
                        android:layout_marginRight="5px"
                        android:background="@drawable/item_gamemoney_type_select"
                        android:button="@null"
                        android:gravity="center"
                        android:text="角"
                        android:textColor="@color/select_gamecolor1"
                        android:textSize="30px" />

                    <CheckBox
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_marginLeft="5px"
                        android:layout_marginRight="5px"
                        android:background="@drawable/item_gamemoney_type_select"
                        android:button="@null"
                        android:gravity="center"
                        android:text="分"
                        android:textColor="@color/select_gamecolor1"
                        android:textSize="30px" />

                    <CheckBox
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_marginLeft="5px"
                        android:layout_marginRight="5px"
                        android:background="@drawable/item_gamemoney_type_select"
                        android:button="@null"
                        android:gravity="center"
                        android:text="厘"
                        android:textColor="@color/select_gamecolor1"
                        android:textSize="30px" />
                    <!--<RadioGroup

                        android:id="@+id/RadioGroupGameCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radion1"
                            android:layout_width="100px"
                            android:layout_height="100px"
