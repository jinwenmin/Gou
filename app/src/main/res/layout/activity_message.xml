<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.king.gou.ui.frmMyActivity.MessageActivity">

    <RelativeLayout
        android:id="@+id/MessageTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/top_background">

        <ImageView
            android:id="@+id/gamejl_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />

        <RadioGroup
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/MessIn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cunqu_left_top"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="8px"
                android:text="收信箱"
                android:textColor="@color/select_cunqu_top_radiobutton"
                android:textSize="30px" />

            <RadioButton
                android:id="@+id/MessOut"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cunqu_right_top"
                android:button="@null"
                android:gravity="center"
                android:padding="8px"
                android:text="发信箱"
                android:textColor="@color/select_cunqu_top_radiobutton"
                android:textSize="30px" />

        </RadioGroup>

        <TextView
            android:id="@+id/newMess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:text="新信息"
            android:textColor="@android:color/white"
            android:textSize="30px" />
    </RelativeLayout>
</LinearLayout>
