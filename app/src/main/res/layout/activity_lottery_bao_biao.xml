<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.king.gou.ui.orderFrmActivity.GameJiluActivity">

    <RelativeLayout
        android:id="@+id/LotteryBBTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/top_background">

        <ImageView
            android:id="@+id/_back"
            android:layout_width="@dimen/top_height"
            android:layout_height="@dimen/top_height"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="彩票报表"
            android:textColor="@android:color/white"
            android:textSize="@dimen/top_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/LotteryBBrelateTime1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="4px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/LotteryBBtimetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="6px"
                android:text="2010-01-01"
                android:textSize="25px" />

            <ImageView
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6px"
                android:background="@drawable/wuka_xiala" />

            <View
                android:layout_width="1px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LotteryBBrelateTime2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="4px"
            android:layout_weight="1"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/LotteryBBtimetext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="6px"
                android:text="6666-66-66"
                android:textSize="25px" />

            <ImageView
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6px"
                android:background="@drawable/wuka_xiala" />

            <View
                android:layout_width="1px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LotteryBBrelateBank4"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="4px"
            android:layout_weight="1"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/LotteryBBtimetext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6px"
                android:text="按日统计"
                android:textSize="25px" />

            <FrameLayout
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <Spinner
                    android:id="@+id/LotteryBBgameLotteryType4"
                    style="@android:style/Widget.Spinner"
                    android:layout_width="25px"
                    android:layout_height="25px"
                    android:layout_marginLeft="-4px"
                    android:layout_marginRight="10px"
                    android:background="@drawable/wuka_xiala"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="25px"
                    android:layout_height="25px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="3px"
                    android:background="@drawable/wuka_xiala" />
            </FrameLayout>

            <View
                android:layout_width="1px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LotteryBBrelateBank3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="4px"
            android:layout_weight="1"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/LotteryBBtimetext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6px"
                android:text="彩票"
                android:textSize="25px" />

            <FrameLayout
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <Spinner
                    android:id="@+id/LotteryBBgameLotteryType"
                    style="@android:style/Widget.Spinner"
                    android:layout_width="25px"
                    android:layout_height="25px"
                    android:layout_marginLeft="-4px"
                    android:layout_marginRight="4px"
                    android:background="@drawable/wuka_xiala"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="25px"
                    android:layout_height="25px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="4px"
                    android:background="@drawable/wuka_xiala" />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"></View>
</LinearLayout>
