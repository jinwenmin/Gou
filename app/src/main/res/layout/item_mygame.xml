<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_game_img"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_margin="30px"
        android:src="@drawable/ic_fingerprint_error" />

    <TextView
        android:textSize="28px"
        android:id="@+id/lottery_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:layout_toRightOf="@id/item_game_img"
        android:text="何种彩票" />

    <TextView
        android:textSize="28px"
        android:id="@+id/lottery_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottery_type"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/item_game_img"
        android:text="哪一期的" />

    <TextView
        android:textSize="28px"
        android:id="@+id/lottery_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottery_date"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/item_game_img"
        android:text="中奖号码是多少" />

    <CheckBox

        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_marginRight="40px"
        android:layout_alignParentRight="true"
        android:layout_below="@id/lottery_type" />
</RelativeLayout>