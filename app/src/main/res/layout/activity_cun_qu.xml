<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.king.gou.ui.orderFrmActivity.CunQuActivity">

    <RelativeLayout
        android:id="@+id/RechargeFirmTop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/top_background">

        <ImageView
            android:id="@+id/gamejl_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />

        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/CunJl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cunqu_left_top"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="4dp"
                android:text="存款记录"
                android:textColor="@color/select_cunqu_top_radiobutton"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/Qujl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cunqu_right_top"
                android:button="@null"
                android:gravity="center"
                android:padding="4dp"
                android:text="取款记录"
                android:textColor="@color/select_cunqu_top_radiobutton"
                android:textSize="15sp" />

        </RadioGroup>
    </RelativeLayout>
</LinearLayout>
