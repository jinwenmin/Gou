<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.king.gou.ui.settingfragment.UpdatePwdActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/UpDatePwdTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_height"
                android:background="@color/top_background">

                <ImageView
                    android:id="@+id/_back"
                    android:layout_width="@dimen/top_back"
                    android:layout_height="@dimen/top_back"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="修改登录密码"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/top_textsize" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="@android:color/white"
                android:padding="20px">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="当前密码:"
                    android:textColor="@android:color/black"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/UpDateOldPwd"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入当前的密码"
                    android:inputType="textPassword"
                    android:textSize="30px" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:text="提示:"
                android:textSize="25px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="密码由6至14个字符组成"
                android:textSize="25px" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="新密码不能和初始密码一样,\n安全密码不能和登录密码一样"
                android:textSize="25px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="@android:color/white"
                android:padding="20px">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="输入新密码:"
                    android:textColor="@android:color/black"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/UpDateNewPwd"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="6-14位字符 由数字和字母组成"
                    android:inputType="textPassword"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:background="@android:color/white"
                android:padding="20px">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="确认新密码:"
                    android:textColor="@android:color/black"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/UpDateCheckNewPwd"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="确认新密码"
                    android:inputType="textPassword"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:background="@android:color/white"
                android:padding="20px">

                <TextView

                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="输入安全密码:"
                    android:textColor="@android:color/black"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/UpDateSafePwd"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="6-14位字符 由数字和字母组成 "
                    android:inputType="textPassword"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:background="@android:color/white"
                android:padding="20px">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="确认安全密码:"
                    android:textColor="@android:color/black"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/UpDateCheckSafePwd"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="确认安全密码"
                    android:inputType="textPassword"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:background="@android:color/white"
                android:padding="20px">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="输入邮箱地址:"
                    android:textColor="@android:color/black"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/UpDateEmail"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="输入邮箱地址"
                    android:inputType="textEmailAddress"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:background="@android:color/white"
                android:padding="20px">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="选择安全问题:"
                    android:textColor="@android:color/black"
                    android:textSize="30px" />

                <Spinner
                    android:id="@+id/SpinnerSafePwd"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7"
                    android:gravity="left" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:background="@android:color/white"
                android:padding="20px">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="输入安全问题:"
                    android:textColor="@android:color/black"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/EditSafePwd"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="输入安全问题答案"
                    android:inputType="textEmailAddress"
                    android:textSize="30px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:background="@android:color/white"
                android:padding="20px">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="确认安全问题:"
                    android:textColor="@android:color/black"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/CheckEditSafePwd"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="输入确认安全问题答案"
                    android:inputType="textEmailAddress"
                    android:textSize="30px" />

            </LinearLayout>

            <Button
                android:id="@+id/UpDataFirstPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_marginRight="40px"
                android:layout_marginLeft="40px"
                android:background="@drawable/recharge_btn"
                android:text="确认"
                android:textColor="@color/my_btn_color"
                android:textSize="40px" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
