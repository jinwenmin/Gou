                    android:textColor="@android:color/black"
                    android:textSize="35px" />

                <TextView
                    android:id="@+id/id"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:text="ID"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
